{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-12">

        <div class="row">

        {% for product in products %}
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="{{path('product', {'id' : product.id })}}"><img class="card-img-top" src="{{asset("images/" ~ product.image)}}"></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="{{path('product', {'id' : product.id })}}">{{ product.productName }}</a>
                </h4>
                <h5>{{ product.price }} Euros </h5>
                {# <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet numquam aspernatur!</p> #}
              </div>
              <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              </div>
            </div>
          </div>
        {% endfor %}
        </div>

      </div>
    </div>
  </div>

  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Réalisé par Youssef Moudni</p>
    </div>
  </footer>
{% endblock %}
